#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "Running secret scan (gitleaks)..."
npm run scan:secrets
RET=$?
if [ $RET -ne 0 ]; then
  echo "Secret scan failed â€” possible secrets detected. Commit blocked. See gitleaks-report.json for details."
  exit 1
fi

echo "Secret scan passed. Proceeding with commit."
